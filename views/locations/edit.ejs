<% layout("./layout/boilerplate") -%>
<link rel="stylesheet" href="/css/star.css" />

<div class="row">
  <div class="col col-6 offset-3">
    <main class="container mt-5">
      <section>
        <h1 class="display-4 text-center mb-3">Edit location</h1>
        <form
          action="/locations/<%=location._id%>?_method=PATCH"
          method="post"
          class="form needs-validation"
          id="myForm"
          novalidate
        >
          <div class="mb-3 form-check form-switch">
            <label for="hasTravelled" class="form-check-label"
              >Past travel</label
            >
            <input role="switch" type="checkbox" name="location[hasTravelled]"
            class="form-check-input" id="hasTravelled"
            <%=(location.hasTravelled==true)?"checked":"" %> />
          </div>
          <div class="mb-3">
            <label for="title" class="form-label">Title of the location</label>
            <input
              type="text"
              name="location[title]"
              id="title"
              placeholder="Title"
              class="form-control"
              value="<%=location.title  %>"
              required
            />
            <div class="valid-feedback">Looks good!</div>
          </div>
          <div class="d-flex align-items-center justify-content-between">
            <div class="form-group mb-3 flex-grow-1">
              <label for="city" class="form-label">City</label>
              <input
                type="text"
                name="location[city]"
                id="city"
                placeholder="City"
                class="form-control"
                value="<%=location.city  %>"
                required
              />
              <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="form-group mb-3 flex-grow-1 ms-sm-3">
              <label for="state" class="form-label">State</label>
              <input
                type="text"
                name="location[state]"
                id="state"
                placeholder="State"
                class="form-control"
                value="<%=location.state %>"
                required
              />
              <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="form-group mb-3 flex-grow-1 ms-sm-3">
              <label for="country" class="form-label">Country</label>
              <input
                type="text"
                name="location[country]"
                id="country"
                class="form-control"
                placeholder="Country"
                value="<%=location.country  %>"
                required
              />
              <div class="valid-feedback">Looks good!</div>
            </div>
          </div>

          <div class="mb-3">
            <label for="dateOfVisit" class="form-label">Date of Visit</label>
            <input
              type="date"
              name="location[dateOfVisit]"
              id="dateOfVisit"
              class="form-control"
              value="<%=dateInHTMLFormat  %>"
              required
            />
          </div>
          <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea
              name="location[description]"
              id="description"
              rows="4"
              cols="30"
              class="form-control"
              required
            >
<%=location.description  %></textarea
            >
          </div>
          <!-- <div class="mb-3">
            <label for="rating" class="form-label">Rating</label>
            <input
              type="number"
              name="location[rating]"
              id="rating"
              class="form-control"
              value="
            />
          </div> -->

          <div class="mb-3">
            <label for="rating" class="form-label">Rating:</label>   
            <fieldset class="starability-basic mt-3" id="rating">
              <input
                type="radio"
                id="first-rate1"
                name="location[rating]"
                value="1"
                <%=(location.rating==1)?"checked":""  %>
              />
              <label for="first-rate1" title="Terrible">1 star</label>
              <input
                type="radio"
                id="first-rate2"
                name="location[rating]"
                value="2"
                <%=(location.rating==2)?"checked":""  %>
              />
              <label for="first-rate2" title="Not good">2 stars</label>
              <input
                type="radio"
                id="first-rate3"
                name="location[rating]"
                value="3"
                <%=(location.rating==3)?"checked":""  %>
              />
              <label for="first-rate3" title="Average">3 stars</label>
              <input
                type="radio"
                id="first-rate4"
                name="location[rating]"
                value="4"
                <%=(location.rating==4)?"checked":""  %>
              />
              <label for="first-rate4" title="Very good">4 stars</label>
              <input
                type="radio"
                id="first-rate5"
                name="location[rating]"
                value="5"
                <%=(location.rating==5)?"checked":""  %>
              />
              <label for="first-rate5" title="Amazing">5 stars</label>
            </fieldset>   
          </div>

          <div class="mb-3 d-flex align-items-center justify-content-center">
            <button
              type="Submit"
              class="btn btn-lg btn-primary btnNew me-2 flex-grow-1"
            >
              Submit
            </button>
            <button
              type="reset"
              id="clearBtn"
              onclick="clearForm()"
              class="btn btn-lg btn-secondary btnNew flex-grow-1"
            >
              Clear
            </button>
          </div>
        </form>
      </section>
    </main>
  </div>
</div>

<script>
  function clearForm() {
    document.getElementById("myForm").reset();
  }
</script>
